{
  "software": [
    {
      "name": "Mail server stack: Database",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "conditionCheck",
            "value": "postgres_database"
          },
          {
            "type": "deploy",
            "value": "Docker/Postgres:{{DOCKER_HOME}}/Postgres"
          },
          {
            "type": "stack",
            "value": "{{DOCKER_HOME}}/Postgres"
          },
          {
            "type": "check",
            "value": "postgres_database"
          },
          {
            "type": "command",
            "value": "ln -s {{DOCKER_HOME}}/Postgres/database.postgres.service /etc/systemd/system/database.postgres.service"
          },
          {
            "type": "command",
            "value": "systemctl enable database.postgres.service"
          },
          {
            "type": "reboot",
            "value": "120"
          },
          {
            "type": "check",
            "value": "postgres_database"
          }
        ]
      }
    },
    {
      "name": "Mail server stack: Postfix",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "deploy",
            "value": "Docker/Postfix:{{DOCKER_HOME}}/Postfix"
          }
        ]
      }
    },
    {
      "name": "Mail server stack: Dovecot",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "deploy",
            "value": "Docker/Dovecot:{{DOCKER_HOME}}/Dovecot"
          }
        ]
      }
    }
  ]
}