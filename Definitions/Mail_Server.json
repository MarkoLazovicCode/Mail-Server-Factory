{
  "software": [
    {
      "name": "Mail server stack: Database",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "condition",
            "value": "file /etc/systemd/system/database.postgres.service"
          },
          {
            "type": "command",
            "value": "mkdir -p {{DOCKER_DEFINITIONS}}/Postgres"
          },
          {
            "type": "copy",
            "value": "Docker/Postgres:{{DOCKER_DEFINITIONS}}/Postgres"
          },
          {
            "type": "stack",
            "value": "{{DOCKER_DEFINITIONS}}/Postgres"
          },
          {
            "type": "command",
            "value": "ln -s {{DOCKER_DEFINITIONS}}/Postgres/database.postgres.service /etc/systemd/system/database.postgres.service"
          },
          {
            "type": "command",
            "value": "systemctl enable database.postgres.service"
          },
          {
            "type": "reboot",
            "value": "120"
          }
        ]
      }
    }
  ]
}