{
  "software": [
    {
      "name": "Mail server stack",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "volume",
            "value": "{{SERVER_HOME}}/Mail-Server:/root/Mail-Server"
          },
          {
            "type": "stack",
            "value": "Docker"
          },
          {
            "type": "service",
            "value": "Docker/Postgres"
          }
        ]
      }
    },
    {
      "name": "Docker Compose",
      "version": "1.25.4",
      "installationSteps": {
        "CentOS": [
          {
            "type": "condition",
            "value": "docker-compose --version"
          },
          {
            "type": "packages",
            "value": "py-pip, python-dev, libffi-dev, openssl-dev, gcc, libc-dev, make"
          },
          {
            "type": "command",
            "value": "curl -L \"https://github.com/docker/compose/releases/download/1.25.4/docker-compose-$(uname -s)-$(uname -m)\" -o /usr/local/bin/docker-compose"
          },
          {
            "type": "command",
            "value": "chmod +x /usr/local/bin/docker-compose"
          },
          {
            "type": "command",
            "value": "docker-compose --version"
          }
        ],
        "Ubuntu": [
          {
            "type": "condition",
            "value": "docker-compose --version"
          },
          {
            "type": "packages",
            "value": "py-pip, python-dev, libffi-dev, openssl-dev, gcc, libc-dev, make"
          },
          {
            "type": "command",
            "value": "curl -L \"https://github.com/docker/compose/releases/download/1.25.4/docker-compose-$(uname -s)-$(uname -m)\" -o /usr/local/bin/docker-compose"
          },
          {
            "type": "command",
            "value": "chmod +x /usr/local/bin/docker-compose"
          },
          {
            "type": "command",
            "value": "docker-compose --version"
          }
        ]
      }
    }
  ]
}