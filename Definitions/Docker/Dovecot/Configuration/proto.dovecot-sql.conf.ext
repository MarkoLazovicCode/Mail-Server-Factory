driver = pgsql
connect = host=postgres_database port=5432 dbname={{SERVER.POSTFIX.DB_NAME}} user={{DB.DB_USER}} password={{DB.DB_PASSWORD}}
default_pass_scheme = PLAIN
password_query = SELECT email as user, password FROM {{DB.VIEW_USERS}} WHERE email='%u';

