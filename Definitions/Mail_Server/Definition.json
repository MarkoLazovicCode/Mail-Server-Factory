        "HOME": "{{SERVER.SERVER_HOME}}/Server/Ca",
        "CERTIFICATES": "/etc/ssl/certs"
      }
    },
    "SERVICE": {
      "DATABASE": {
        "NAME": "postmaster_db",
        "PORTS": {
          "PORT": 5432,
          "PORT_EXPOSED": 35432
        },
        "TYPE": "Postgres",
        "HOST": "127.0.0.1",
        "DB_DIRECTORY": "mail_directory",
        "TABLE_DOMAINS": "mail_virtual_domains",
        "TABLE_USERS": "mail_virtual_users",
        "TABLE_ALIASES": "mail_virtual_aliases",
