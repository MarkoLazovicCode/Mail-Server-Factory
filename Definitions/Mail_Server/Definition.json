      "NETWORK": {
        "NAME": "postmaster_network"
      }
    }
  },
  "includes": [
    "Definitions/Mail_Server/Docker/Network.json",
    "Definitions/Mail_Server/Docker/Database.json",
    "Definitions/Mail_Server/Docker/AntiVirus.json",
