{
  "software": [
    {
      "name": "Mail server stack: Postfix",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "deploy",
            "value": "Docker/Postfix:{{DOCKER.DOCKER_HOME}}/Postfix"
          },
          {
            "type": "build",
            "value": "{{DOCKER.DOCKER_HOME}}/Postfix:postfix_service:1.0"
          },
          {
            "type": "stack",
            "value": "{{DOCKER.DOCKER_HOME}}/Postfix"
          }
        ]
      }
    }
  ]
}