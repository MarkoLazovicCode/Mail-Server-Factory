{
  "variables": {
    "SERVER": {
      "DOVECOT": {
        "DBHOST": "127.0.0.1",
        "DBNAME": "dovecot_service"
      }
    }
  },
  "software": [
    {
      "name": "Mail server stack: Dovecot",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "conditionCheck",
            "value": "dovecot_service"
          },
          {
            "type": "command",
            "value": "systemctl status dovecot && systemctl stop dovecot && systemctl disable dovecot || true"
          },
          {
            "type": "portRequired",
            "value": "110, 143, 993, 995"
          },
          {
            "type": "portCheck",
            "value": "{{DB.DB_PORT}}"
          },
          {
            "type": "deploy",
            "value": "Definitions/Docker/Dovecot:{{DOCKER.DOCKER_HOME}}/Dovecot"
          },
          {
            "type": "database",
            "value": "{{DOCKER.DOCKER_HOME}}/Dovecot/Database"
          },
          {
            "type": "certificate",
            "value": "{{SERVER.HOSTNAME}}"
          },
          {
            "type": "stack",
            "value": "{{DOCKER.DOCKER_HOME}}/Dovecot"
          }
        ]
      }
    }
  ]
}