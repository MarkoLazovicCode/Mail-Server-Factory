{
  "software": [
    {
      "name": "Docker",
      "version": "19.03",
      "installationSteps": {
        "CentOS": [
          {
            "type": "condition",
            "value": "docker --version"
          },
          {
            "type": "packageGroup",
            "value": "Development Tools"
          },
          {
            "type": "packages",
            "value": "yum-utils, device-mapper-persistent-data, lvm2"
          },
          {
            "type": "command",
            "value": "yum-config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo"
          },
          {
            "type": "packages",
            "value": "docker-ce, docker-ce-cli, containerd.io"
          },
          {
            "type": "command",
            "value": "systemctl start docker"
          },
          {
            "type": "command",
            "value": "docker run hello-world"
          },
          {
            "type": "command",
            "value": "systemctl enable docker"
          },
          {
            "type": "reboot",
            "value": "120"
          },
          {
            "type": "command",
            "value": "docker run hello-world"
          }
        ],
        "Ubuntu": [
          {
            "type": "condition",
            "value": "docker --version"
          },
          {
            "type": "packages",
            "value": "apt-transport-https, ca-certificates, curl, gnupg-agent, software-properties-common, lsb-core"
          },
          {
            "type": "command",
            "value": "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | apt-key add -"
          },
          {
            "type": "command",
            "value": "apt-key fingerprint 0EBFCD88"
          },
          {
            "type": "command",
            "value": "add-apt-repository \"deb https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable\""
          },
          {
            "type": "command",
            "value": "apt-get update"
          },
          {
            "type": "packages",
            "value": "docker-ce, docker-ce-cli, containerd.io"
          },
          {
            "type": "command",
            "value": "docker run hello-world"
          },
          {
            "type": "reboot",
            "value": "120"
          },
          {
            "type": "command",
            "value": "docker run hello-world"
          }
        ]
      }
    },
    {
      "name": "Docker Compose",
      "version": "1.25.4",
      "installationSteps": {
        "CentOS": [
          {
            "type": "condition",
            "value": "docker-compose --version"
          },
          {
            "type": "packages",
            "value": "epel-release, python-pip"
          },
          {
            "type": "command",
            "value": "pip --version"
          },
          {
            "type": "packages",
            "value": "python-devel, libffi-devel, openssl-devel, glibc-devel, gcc, gcc-c++, make"
          },
          {
            "type": "command",
            "value": "echo \"- - - - - - - - WORK IN PROGRESS !!! - - - - - - -\""
          }
        ]
      }
    }
  ]
}